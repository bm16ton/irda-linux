include ../output.mak

CC      = gcc
CFLAGS= $(RPM_OPT_FLAGS) $(SYS_INCLUDES) $(DEB_CFLAGS) -Wall -Wstrict-prototypes

SRCS = findchip.c smc.c nsc.c winbond.c
OBJS = $(SRCS:.c=.o)

all: findchip


.c.o:
	$(prn_cc)
	$(ECMD)$(CC) $(CFLAGS) -c $<


findchip: $(OBJS)
	$(prn_cc_o)
	$(ECMD)$(CC) $(DEB_LDFLAGS) $(OBJS) $(CFLAGS) -o $@


clean:
	$(ECMD)rm -f *.o *~ \#*


distclean:
	$(ECMD)rm -f findchip gfindchip *.o *~ \#*


install: findchip
	$(prn_install)
	$(ECMD)install findchip $(ROOT)/usr/sbin/


gfindchip: gfindchip.c 
	$(prn_cc)
	$(ECMD))$(CC) $(CFLAGS) `gtk-config --cflags`  $< -o $@ `gtk-config --libs`

